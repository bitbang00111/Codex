<Window x:Class="HandTrackingWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hand Tracking - MediaPipe.NET + OpenCvSharp"
        Height="860"
        Width="1280"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Camera:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox x:Name="CameraSelector" Width="120" Margin="0,0,16,0" />
            <Button x:Name="StartButton" Content="Start" Width="120" Margin="0,0,8,0" Click="StartButton_OnClick"/>
            <Button x:Name="StopButton" Content="Stop" Width="120" IsEnabled="False" Click="StopButton_OnClick"/>
        </StackPanel>

        <Border Grid.Row="1" BorderBrush="#777" BorderThickness="1" CornerRadius="8" Background="#151515">
            <Image x:Name="CameraImage" Stretch="Uniform" />
        </Border>

        <TextBlock x:Name="StatusText"
                   Grid.Row="2"
                   Margin="0,12,0,0"
                   FontSize="14"
                   Foreground="#DDDDDD"
                   Text="Ready." />
    </Grid>
</Window>
